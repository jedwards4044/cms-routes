{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES6",
        "baseUrl": "./src/",
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
